# Prisma
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/rachelfoods?schema=public"
# Direct database connection (without pooler) - for migrations only
# In production (Neon): Use endpoint without "-pooler" suffix
# Example: postgresql://user:pass@ep-abc123.c-3.us-east-2.aws.neon.tech/neondb
DIRECT_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/rachelfoods?schema=public"

# JWT
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRATION="7d"

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
